{
    "angularCompilerOptions": {
        "annotationsAs": "static fields",
        "annotateForClosureCompiler": true,
        "genDir": "ngfactory"
    },
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "outDir": "../../built",
        "declaration": true
    }
}